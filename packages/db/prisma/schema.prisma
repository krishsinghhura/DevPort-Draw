generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String
  profilePhoto String?
  createdAt DateTime @default(now())
  room Room[]
  chats ChatHistory[]
}

model Room{
  id Int @id @default(autoincrement())
  slug String @unique
  createdAt DateTime @default(now())
  adminId Int
  admin User @relation(fields: [adminId],references: [id])
  chats ChatHistory[]
}

model ChatHistory{
  id Int @id @default(autoincrement())
  message String
  userId Int
  roomId Int
  createdAt DateTime @default(now()) 
  room Room @relation(fields: [roomId],references: [id])
  user User @relation(fields: [userId],references: [id])
}